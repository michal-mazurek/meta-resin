[Unit]
Description=Prepare OpenVPN Application On Resin
Requires=mnt-conf.mount resin-device-uuid.service var-volatile.mount
After=mnt-conf.mount resin-device-uuid.service var-volatile.mount
AssertPathIsDirectory=/etc/openvpn/

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@BINDIR@/prepare-openvpn

[Install]
WantedBy=multi-user.target
